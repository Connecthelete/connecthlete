<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FindPeople">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        
        
        <TextView
            android:text="Which sport would you like to play right now?"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="32dp"
            android:layout_width="match_parent"
            android:padding="16dp"
            android:layout_height="wrap_content">
        </TextView>
        
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="16dp"
                android:paddingBottom="24dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/soccer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Soccer" />

                <Button
                    android:id="@+id/basketball"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="BasketBall" />

                <Button
                    android:id="@+id/football"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="FootBall" />

                <Button
                    android:id="@+id/running"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Running" />

                <Button
                    android:id="@+id/Lacrosse"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="" />

                <Button
                    android:id="@+id/tens"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Tennis" />

                <Button
                    android:id="@+id/tabletenis"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Table Tennis" />

                <Button
                    android:id="@+id/rugby"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Rugby" />

                <Button
                    android:id="@+id/cricket"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Cricket" />

                <Button
                    android:id="@+id/wrestling"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Wrestling" />

                <Button
                    android:id="@+id/hockey"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Hockey" />

                <Button
                    android:id="@+id/volleyball"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="VolleyBall" />

                <Button
                    android:id="@+id/badminton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Badminton" />

                <Button
                    android:id="@+id/baseball"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Baseball" />

                <Button
                    android:id="@+id/badmasdfinton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Badminton" />

                <Button
                    android:id="@+id/baseasdfasball"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Baseball" />



            </LinearLayout>
        </ScrollView>
        
        
    </LinearLayout>
    
</androidx.constraintlayout.widget.ConstraintLayout>